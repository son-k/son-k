<div class="card widget">
    <div class="card-content">
        <script>
            (adsbygoogle = window.adsbygoogle || []).push({
                google_ad_client: "ca-pub-5414348543182733",
                enable_page_level_ads: true
            });
        </script>
        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- github.io -->
        <ins class="adsbygoogle"
            style="display:block"
            data-ad-client="ca-pub-5414348543182733"
            data-ad-slot="7978865470"
            data-ad-format="auto"
            data-full-width-responsive="true"></ins>
        <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    
        <div class="menu">
        <h3 class="menu-label">
            <%= __('widget.links') %>
        </h3>
        <ul class="menu-list">
        <% for (let i in links) { %>
            <li>
                <a class="level is-mobile" href="<%- links[i] %>" target="_blank" rel="noopener">
                    <span class="level-left">
                        <span class="level-item"><%= i %></span>
                    </span>
                    <span class="level-right">
                        <span class="level-item tag"><%- get_domain(links[i]) %></span>
                    </span>
                </a>
            </li>
        <% } %>
        </ul>
        </div>
    </div>
</div>
